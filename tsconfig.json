{
    "compilerOptions": {
        "baseUrl": ".",
        "moduleResolution": "node",
        "isolatedModules": true,
        "rootDirs": ["test"],
        "lib": ["ES2016", "ES2022"],
        "module": "commonjs",
        "target": "es6",
        "noEmit": false,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "removeComments": true,
        "noImplicitAny": true,
        "composite": false,
        "jsx": "react",
        "allowJs": true,
        "jsxFactory": "JSX.createElement",
        "outDir": "dist",
        "typeRoots": ["./types", "./node_modules/string-toCapitalize", "./node_modules/@types"],
        "paths": {
            "@lib": ["/libs"],
            "@themes/": ["/config/theme"]
        }
    },
    "include": ["project/**/*"],
    "exclude": ["node_modules"]
}
